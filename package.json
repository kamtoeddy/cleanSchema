{
  "author": "kamtoeddy",
  "bugs": {
    "url": "https://github.com/kamtoeddy/clean-schema/issues"
  },
  "description": "schema builder for javascript environments",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/kamtoeddy/clean-schema#readme",
  "keywords": [
    "event-driven",
    "schema",
    "data definition",
    "data validation"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/(*.)+(test).(ts|js)"
    ],
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
  "license": "ISC",
  "main": "dist/index.js",
  "name": "clean-schema",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamtoeddy/clean-schema.git"
  },
  "scripts": {
    "build": "tsc",
    "clean-up": "rm -rf coverage dist",
    "test": "tsc & jest --verbose --watchAll",
    "test-c": "tsc & jest --verbose --watchAll --coverage",
    "test:ci": "tsc & jest --verbose",
    "prepare": "npm run clean-up && npm run build"
  },
  "types": "dist/index.d.ts",
  "version": "2.7.0"
}
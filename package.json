{
  "name": "ivo",
  "author": "kamtoeddy",
  "description": "A different approach to schema valitation",
  "version": "1.3.1",
  "license": "MIT",
  "homepage": "https://github.com/kamtoeddy/ivo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamtoeddy/ivo.git"
  },
  "bugs": {
    "url": "https://github.com/kamtoeddy/ivo/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "schema",
    "validation"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean-up": "rm -rf coverage dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\"",
    "test": "bun run build && bun test",
    "test:cov": "bun run build && bun test --coverage",
    "test:watch": "bun run build && bun test --watch",
    "prepare": "bun run clean-up && bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.28.1",
    "tsup": "^7.2.0",
    "typescript": "^5.3.3"
  }
}

{
  "author": "kamtoeddy",
  "bugs": {
    "url": "https://github.com/kamtoeddy/clean-schema/issues"
  },
  "description": "schema builder for javascript environments",
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "tsup": "^7.2.0",
    "typescript": "^4.9.5"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/kamtoeddy/clean-schema#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/(*.)+(test).(ts|js)"
    ],
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
  "license": "MIT",
  "name": "clean-schema",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamtoeddy/clean-schema.git"
  },
  "scripts": {
    "build": "tsup",
    "clean-up": "rm -rf coverage dist",
    "lint": "eslint . --ext .ts",
    "test": "tsc & jest --verbose",
    "tes:cov": "tsc & jest --verbose --coverage",
    "test:watch": "tsc & jest --verbose --watchAll",
    "prepare": "npm run clean-up && npm run build"
  },
  "version": "3.6.0",
  "keywords": [
    "schema",
    "validation"
  ]
}
